<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:gravity="center"
    android:layout_margin="@dimen/tiny_margin"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/ItemMainCategory_ImageView_categoryPhoto"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/small_margin"
        android:layout_marginTop="@dimen/small_margin"
        android:layout_marginLeft="@dimen/tiny_margin"
        android:layout_marginRight="@dimen/tiny_margin"/>

    <TextView
        android:id="@+id/ItemMainCategory_TextView_categoryName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/tiny_padding"
        android:text="@string/serial"
        android:textColor="@color/blackColor" />

</LinearLayout>
