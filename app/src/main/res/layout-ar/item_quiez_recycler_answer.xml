<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="@dimen/tiny_margin">
    <LinearLayout
        android:id="@+id/item_quize_answer_LinearLayout_answer1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/item_quize_answer_TextView_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/small_margin"
            android:textStyle="bold"
            android:textSize="@dimen/medium_text_size"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/small_margin"
            android:descendantFocusability="beforeDescendants"
            android:focusableInTouchMode="true"
            android:gravity="center">
            <android.support.design.widget.TextInputLayout
                android:id="@+id/item_quize_answer_TextInputLayout_answer1_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/large_margin"
                android:layout_marginRight="@dimen/large_margin">

                <EditText
                    android:id="@+id/item_quize_answer_EditText_answer1_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/al_e3rab"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textSize="@dimen/medium_text_size"
                    android:textColorHint="@color/blackColor" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/item_quize_answer_answer1_answer1_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/large_margin"
                android:layout_marginRight="@dimen/large_margin"
                android:layout_weight="1">

                <EditText
                    android:id="@+id/item_quize_answer_EditText_answer1_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/al_7arka"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textSize="@dimen/medium_text_size"
                    android:textColorHint="@color/blackColor" />
            </android.support.design.widget.TextInputLayout>

            <!--<ImageView-->
            <!--android:id="@+id/item_quize_answer_ImageView_markQ1"-->
            <!--android:layout_width="50dp"-->
            <!--android:layout_height="50dp" />-->
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/item_quize_answer_EditText_correct1_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/large_margin"
                android:layout_marginRight="@dimen/large_margin"
                android:textSize="@dimen/medium_text_size"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/item_quize_answer_EditText_correct1_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/large_margin"
                android:layout_marginRight="@dimen/large_margin"
                android:textSize="@dimen/medium_text_size"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>


</LinearLayout>