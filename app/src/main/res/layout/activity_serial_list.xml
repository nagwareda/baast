<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.tec77.bsatahalk.view.activity.SerialListActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="@drawable/home_header"></LinearLayout>

        <LinearLayout
            android:id="@+id/SerialListActivity_LinearLayout_NetworkFailed"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/small_padding"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/rounded_shape_txtview"
                android:layout_marginTop="@dimen/xxx_large_margin"
                android:layout_marginRight="@dimen/medium_margin"
                android:layout_marginLeft="@dimen/medium_margin"
                android:text="@string/no_internet"
                android:textColor="@color/colorAccent" />

            <Button
                android:id="@+id/SerialListActivity_btn_refreshConnection"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/small_margin"
                android:background="@drawable/btn_login_shape"
                android:text="@string/try_again"
                android:textAllCaps="false"
                android:textColor="@color/whiteColor" />
        </LinearLayout>

        <FrameLayout
            android:id="@+id/SerialListActivity_frameLayout_contnent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/SerialListActivity_TextView_noLessonAvailable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/large_margin"
                android:background="@drawable/rounded_shape_txtview"
                android:gravity="center"
                android:padding="@dimen/large_padding"
                android:text="@string/no_lesson"
                android:textColor="@color/colorPrimary"
                android:visibility="gone" />

            <android.support.v4.widget.SwipeRefreshLayout
                android:id="@+id/SerialListActivity_swipeRefreshLayout_refresh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/SerialListActivity_RecyclerView_lesseonRecycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </android.support.v4.widget.SwipeRefreshLayout>
            <com.victor.loading.rotate.RotateLoading
                android:id="@+id/SerialListActivity_RotateLoading_loading"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                app:loading_color="@color/colorPrimary"
                app:loading_width="2dp" />
        </FrameLayout>
    </LinearLayout>
</LinearLayout>
