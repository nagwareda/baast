<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/tiny_margin"
        android:padding="@dimen/tiny_padding"
        app:cardBackgroundColor="@color/whiteColor">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/tiny_margin"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ItemTopTenList_CircleImageView_profile"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:elevation="5dp"
                android:src="@drawable/fake_profile"
                app:civ_border_color="@color/colorPrimary"
                app:civ_border_width="1dp" />


            <TextView
                android:id="@+id/ItemTopTenList_TextView_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/tiny_margin"
                android:layout_marginRight="@dimen/tiny_margin"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textColor="@color/blackColor"
                android:maxLines="2"
                android:textSize="@dimen/small_text_size" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/tiny_margin"
                android:layout_marginRight="@dimen/tiny_margin"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/tiny_margin"
                    android:layout_marginRight="@dimen/tiny_margin"
                    android:src="@drawable/quiz_no" />

                <TextView
                    android:id="@+id/ItemTopTenList_TextView_quizzNumber"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="@dimen/tiny_margin"
                    android:layout_marginRight="@dimen/tiny_margin"
                    android:background="@drawable/rectange_shape_txtview"
                    android:gravity="center"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:textColor="@color/blackColor"
                    android:textSize="@dimen/small_text_size" />

            </LinearLayout>



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginLeft="@dimen/tiny_margin"
                android:layout_marginRight="@dimen/tiny_margin"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/tiny_margin"
                    android:layout_marginRight="@dimen/tiny_margin"
                    android:src="@drawable/degree" />
                <TextView
                    android:id="@+id/ItemTopTenList_TextView_score"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="@dimen/tiny_margin"
                    android:layout_marginRight="@dimen/tiny_margin"
                    android:background="@drawable/rectange_shape_txtview"
                    android:gravity="center"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:textColor="@color/blackColor"
                    android:textSize="@dimen/small_text_size" />
            </LinearLayout>



        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>