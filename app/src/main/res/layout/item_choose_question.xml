<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/item_chhoseList_TextView_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/small_margin"
        android:textSize="@dimen/medium_text_size"
        android:textStyle="bold" />

    <RadioGroup
        android:id="@+id/item_chooseList_radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/small_margin">

        <RadioButton
            android:id="@+id/item_chooseList_radioBtn1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/tiny_margin" />

        <RadioButton
            android:id="@+id/item_chooseList_radioBtn2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/tiny_margin" />

        <RadioButton
            android:id="@+id/item_chooseList_radioBtn3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/tiny_margin" />

        <RadioButton
            android:id="@+id/item_chooseList_radioBtn4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/tiny_margin" />


    </RadioGroup>

    <TextView
        android:id="@+id/item_chooseList_TextView_ans"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/small_margin"
        android:layout_marginLeft="@dimen/large_margin"
        android:layout_marginRight="@dimen/large_margin"
        android:layout_marginTop="@dimen/small_margin"
        android:textSize="@dimen/medium_text_size"
        android:textStyle="bold"
        android:visibility="gone" />

</LinearLayout>