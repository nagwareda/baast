<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/medium_margin"
    android:layout_marginRight="@dimen/medium_margin"
    android:orientation="horizontal">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <Button
                android:id="@+id/ItemQuestionBtnList_btn_questionBtn"
               android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/medium_margin"
                android:layout_marginLeft="@dimen/small_margin"
                android:layout_marginRight="@dimen/small_margin"
                android:layout_marginTop="@dimen/medium_margin"
                android:background="@drawable/btn_login_shape"
                android:textAllCaps="false"
                android:textColor="@color/whiteColor"
                android:textSize="18sp" />


            <Button
                android:id="@+id/ItemQuestionBtnList_btn_questionBtnAnswered"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/medium_margin"
                android:layout_marginLeft="@dimen/small_margin"
                android:layout_marginRight="@dimen/small_margin"
                android:layout_marginTop="@dimen/medium_margin"
                android:background="@drawable/btn_rate_shape"
                android:textAllCaps="false"
                android:textColor="@color/whiteColor"
                android:textSize="18sp"
                android:visibility="gone" />
        </LinearLayout>

    </FrameLayout>

    <TextView
        android:id="@+id/ItemQuestionBtnList_textView_mark"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/medium_margin"
        android:layout_marginLeft="@dimen/small_margin"
        android:layout_marginRight="@dimen/small_margin"
        android:layout_marginTop="@dimen/medium_margin"
        android:layout_weight="1"
        android:gravity="center"
        android:hint="@string/mark"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/medium_text_size"
        android:textStyle="bold" />
</LinearLayout>